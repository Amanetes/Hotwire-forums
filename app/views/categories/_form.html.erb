<%= form_with(model: category) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="mb-3">
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div class="mb-3">
    <%= f.label :discussions_count, style: "display: block" %>
    <%= f.number_field :discussions_count %>
  </div>

  <div class="mb-3">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
