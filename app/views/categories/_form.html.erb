<%= form_with(model: category) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :discussions_count, style: "display: block" %>
    <%= f.number_field :discussions_count %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
